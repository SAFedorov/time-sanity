{
  "manifest_version": 2,

  "name": "Time-Sanity",
  "description": "Redirects sites you procrastinate to arxiv-sanity.com",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "settings.html"
  },

  "background": { "scripts": ["blocker.js"] },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ]
}